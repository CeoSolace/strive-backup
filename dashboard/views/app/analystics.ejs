<% layout('layouts/app') -%>

<div class="flex flex-col gap-6">
  <div>
    <h1 class="text-2xl font-semibold tracking-tight">Analytics</h1>
    <p class="mt-1 text-sm text-zinc-600 dark:text-zinc-300">Usage insights and operational analytics.</p>
  </div>
  <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
    <div class="card">
      <div class="card-header">Managed servers</div>
      <div class="card-value"><%= analytics?.guildCount ?? 0 %></div>
      <div class="card-sub">Guilds with access</div>
    </div>
    <div class="card">
      <div class="card-header">Settings changes</div>
      <div class="card-value"><%= analytics?.settingsChanges ?? 0 %></div>
      <div class="card-sub">Total changes</div>
    </div>
    <div class="card">
      <div class="card-header">Automations</div>
      <div class="card-value"><%= analytics?.automationsCount ?? 0 %></div>
      <div class="card-sub">Tasks stored</div>
    </div>
    <div class="card">
      <div class="card-header">Module toggles</div>
      <div class="card-value"><%= analytics?.modulesChanged ?? 0 %></div>
      <div class="card-sub">Total toggles</div>
    </div>
    <div class="card">
      <div class="card-header">Command toggles</div>
      <div class="card-value"><%= analytics?.commandsChanged ?? 0 %></div>
      <div class="card-sub">Total toggles</div>
    </div>
  </div>
</div>
